<section class="newRecipe">

<h1>New Recipe</h1>

<%= form_with(model: @recipe, url: recipes_path) do |form| %>
  <div class="form-group">
    <%= form.label :name %>
    <%= form.text_field :name, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :preparation %>
    <%= form.text_area :preparation, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :cooking_time %>
    <%= form.number_field :cooking_time, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :description %>
    <%= form.text_area :description, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.check_box :public %>
    <%= form.label :public %>
  </div>

  <%= form.submit "Create Recipe", class: "btn btn-primary" %>
<% end %>
</section>