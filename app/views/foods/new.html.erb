<section class="newFood">
<h2>Add New Food</h2>
<%= form_with model: @food do |form| %>
  <% if @food.errors.any? %>
    <div id="error_msg">
      <h2><%= pluralize(@food.errors.count, "error") %> prohibited this food from being saved:</h2>

      <ul>
      <% @food.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="fieldInput">
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>

  <div class="fieldInput">
    <%= form.label :measurement_unit %>
    <%= form.text_field :measurement_unit %>
  </div>

  <div class="fieldInput">
    <%= form.label :unit_price %>
    <%= form.number_field :price %>
  </div>

  <div class="actions">
    <%= form.submit %>
    <%= link_to 'Cancel', foods_path, class: 'button' %>
  </div>
<% end %>
<section>